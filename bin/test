#!/usr/bin/env ruby
require 'httpbench'

site = Httpbench::Site.new(
  :address => '54.244.135.43',
  :host => "wiki.jbussdieker.com",
  :port => 80
)
page = site.new_page("/")
test = Httpbench::Test.new(:duration => 60, :rps => 1)
puts "Running test..."
test.run(page)
puts "Waiting for results..."
f = File.open("results.txt")
test.results.each do |result|
  f.puts result[:duration]
end
f.close
